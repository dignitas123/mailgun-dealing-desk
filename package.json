{
  "name": "mailgun-dealing-desk",
  "version": "1.0.0",
  "description": "REST API for AWS Lambda By Serverless framwork with TypeScript and MongoDB Atlas.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "cp -R node_modules dist/node_modules && (cd dist && zip -r ../dist.zip .)",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "local": "serverless offline",
    "deploy": "npm run build && serverless deploy",
    "test": "cross-env NODE_ENV=dev mocha -r ts-node/register tests/*.test.ts --exit",
    "coverage": "nyc --reporter lcov npm run test"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@types/aws-lambda": "^8.10.51",
    "dotenv": "^8.2.0",
    "mongoose": "^5.9.10"
  },
  "keywords": [
    "Nodejs",
    "TypeScript",
    "ServerLess",
    "MongoDB Atlas",
    "AWS Lambda"
  ]
}
